      <option value="0">COM_JOOMGALLERY_CATEGORIES_HIDDEN_OPTION_0</option>
      <option value="1">COM_JOOMGALLERY_CATEGORIES_HIDDEN_OPTION_1</option>
    </field>
    <field name="exclude_toplist" default="0" type="radio" class="btn-group btn-group-yesno" label="COM_JOOMGALLERY_FORM_LBL_CATEGORY_EXCLUDE_TOPLIST" description="COM_JOOMGALLERY_FORM_DESC_CATEGORY_EXCLUDE_TOPLIST" hint="COM_JOOMGALLERY_FORM_LBL_CATEGORY_EXCLUDE_TOPLIST">
