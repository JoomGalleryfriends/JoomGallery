<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search"
               type="text"
               label="JSEARCH_FILTER"
               hint="JSEARCH_FILTER"
               description="COM_JOOMGALLERY_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="published"
               type="list"
               label="JOPTION_SELECT_PUBLISHED"
               onchange="this.form.submit();" >
            <option value="*">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">PUBLISHED</option>
            <option value="0">UNPUBLISHED</option>
        </field>

        <field name="failed"
               type="list"
               label="COM_JOOMGALLERY_TASKS_SELECT_FAILED_LABEL"
               onchange="this.form.submit();" >
            <option value="*">COM_JOOMGALLERY_TASKS_SELECT_FAILED_LABEL</option>
            <option value="1">COM_JOOMGALLERY_FAILED</option>
            <option value="0">COM_JOOMGALLERY_NO_FAILED</option>
        </field>

        <field name="completed"
               type="list"
               label="COM_JOOMGALLERY_TASKS_SELECT_COMPLETED_LABEL"
               onchange="this.form.submit();" >
            <option value="*">COM_JOOMGALLERY_TASKS_SELECT_FAILED_LABEL</option>
            <option value="1">COM_JOOMGALLERY_COMPLETED</option>
            <option value="0">COM_JOOMGALLERY_NOT_COMPLETED</option>
        </field>
    </fields>

    <fields name="list">
        <field name="fullordering"
               type="list"
               label="JGLOBAL_SORT_BY"
               onchange="this.form.submit();"
               default="a.ordering ASC"
               validate="options">
            <option value="*">JGLOBAL_SORT_BY</option>
            <option value="a.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
            <option value="a.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
            <option value="a.published ASC">JSTATUS_ASC</option>
            <option value="a.published DESC">JSTATUS_DESC</option>
            <option value="a.completed ASC">COM_JOOMGALLERY_TASKS_STATUS_COMPLETED_ASC</option>
            <option value="a.completed DESC">COM_JOOMGALLERY_TASKS_STATUS_COMPLETED_DESC</option>
        </field>

       <field name="limit"
              type="limitbox"
              label="JSEARCH_FILTER_LIMIT"
              class="input-mini"
              default="50"
              onchange="this.form.submit();" />
    </fields>
</form>
