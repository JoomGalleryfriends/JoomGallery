{
    "require": {
        "fileeye/pel": "^0.10.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88.0",
        "squizlabs/php_codesniffer": "^3.13.4",
        "slevomat/coding-standard": "^8.15",
        "colinodell/indentation": "^1.0"
    },
    "config": {
        "vendor-dir": "administrator/com_joomgallery/vendor",
        "platform": {
            "php": "8.0.0"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "post-install-cmd": [
          "administrator/com_joomgallery/vendor/bin/phpcs --config-set installed_paths tools/phpcs,administrator/com_joomgallery/vendor/slevomat/coding-standard"
        ],
        "post-update-cmd": [
          "administrator/com_joomgallery/vendor/bin/phpcs --config-set installed_paths tools/phpcs,administrator/com_joomgallery/vendor/slevomat/coding-standard"
        ]
    }
}
