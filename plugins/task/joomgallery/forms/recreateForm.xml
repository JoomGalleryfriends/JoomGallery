<?xml version="1.0" encoding="UTF-8"?>
<form>
  <fields name="params">
    <fieldset name="task_params" addfieldprefix="Joomgallery\Component\Joomgallery\Administrator\Field">
      <field name="cid"
        type="text"
        default="0"
        label="PLG_TASK_JOOMGALLERY_TASK_RECREATEIMAGE_CID_LABEL"
        description="PLG_TASK_JOOMGALLERY_TASK_RECREATEIMAGE_CID_DESC" />
      <field name="type"
        type="jgimagetype"
        default="thumbnail"
        label="PLG_TASK_JOOMGALLERY_TASK_RECREATEIMAGE_TYPE_LABEL"
        description="PLG_TASK_JOOMGALLERY_TASK_RECREATEIMAGE_TYPE_DESC" />
      <field name="resume"
        type="radio"
        class="btn-group"
        layout="joomla.form.field.radio.switcher"
        default="1"
        size="1"
        label="PLG_TASK_JOOMGALLERY_TASK_RESUME_LABEL"
        description="PLG_TASK_JOOMGALLERY_TASK_RESUME_DESC">
        <option value="0">JNO</option>
        <option value="1">JYES</option>        
      </field>
      <field name="user"
        type="user"
        label="PLG_TASK_JOOMGALLERY_TASK_RECREATEIMAGE_USER_LABEL"
        description="PLG_TASK_JOOMGALLERY_TASK_RECREATEIMAGE_USER_DESC" />
      <field name="successful"
        type="text"
        readonly="true"
        label="PLG_TASK_JOOMGALLERY_TASK_SUCCESSFUL_LABEL" />
    </fieldset>
  </fields>
</form>
